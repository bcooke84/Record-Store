<% @albums.each do |album| %>

 <img src= "<%= album.artwork %>"  width="150" height="150">
 <p>Title:        <%= album.title           %> </p>
 <p>Artist:       <%= album.get_artist.name %> </p>
 <p>Release Year: <%= album.year            %> </p>
 <p>Genre:        <%= album.genre           %> </p>
 <p>Stock Level:  <%= album.stock_level     %> </p>

 <form action="/home/albums/<%= album.id %>" method="get">
 <input type="submit" value="Record Details">
 </form>

 <hr/>
<% end %>
