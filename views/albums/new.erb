<form action="/home/albums" method="post" autocomplete="off">

  <label for="artist_id">Artist:<input list="artist_list" name="artist_id"/></label>
  <datalist id="artist_list">
  <%@artists.each do |artist| %>
  <option value= "<%=artist.name%>"><%=artist.name%> </option>
  <%end%>
  </datalist> <br>

  <label for="title">Title:</label>
  <input type="text" id="title" name="title"></br>

  <label for="genre">Genre:</label>
  <input list="genre_list" name="genre"/>
  <datalist id="genre_list">
  <%@genres.each do |genre| %>
  <option value= "<%=genre["genre"]%>"> <%=genre["genre"]%> </option>
  <%end%>
  </datalist><br>

  <label for="year">Release Year:</label>
  <input type="text" id="year" name="year"></br>

  <label for="artwork">Artwork:</label>
  <input type="text" id="artwork" name="artwork"></br>

  <label for="cost_price">Cost Price:</label>
  <input type="number" id="cost_price" name="cost_price" step="0.01"></br>

  <label for="store_price">Store Price:</label>
  <input type="number" id="store_price" name="store_price" step="0.01"></br>

  <label for="stock_level">Stock Level:</label>
  <input type="number" id="stock_level" name="stock_level"></br>

<input type="submit" value="Add Record">

</form>
