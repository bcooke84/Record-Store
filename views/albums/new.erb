<form class="form" action="/home/albums" method="post" autocomplete="off">

  <ul class="edit_list">
    <li class="form-row">
      <input list="artist_list" name="artist_id" required placeholder="Artist Name"/>
      <datalist id="artist_list">
        <%@artists.each do |artist| %>
        <option value= "<%=artist.name%>"><%=artist.name%> </option>
        <%end%>
      </datalist> <br>
    </li>

    <li class="form-row">
      <input type="text" id="title" name="title" required placeholder="Album Title"></br>
    </li>

    <li class="form-row">
      <input list="genre_list" name="genre" placeholder="Genre"/>
      <datalist id="genre_list">
        <%@genres.each do |genre| %>
        <option value= "<%=genre["genre"]%>"> <%=genre["genre"]%> </option>
        <%end%>
      </datalist>
    </li>

    <li class="form-row">
      <input type="text" id="year" name="year" minlength="4" maxlength="4" size="8" placeholder="Release Year">

    </li>
    <li class="form-row">
      <input type="text" id="artwork" name="artwork" placeholder="Artwork Link">
    </li>

    <li class="form-row">
      <input type="number" id="cost_price" name="cost_price" step="0.01" placeholder="Cost Price" min="0.00">
    </li>

    <li class="form-row">
      <input type="number" id="store_price" name="store_price" step="0.01" placeholder="Store Price" min="0.00">
    </li>

    <li class="form-row">
      <input type="number" id="stock_level" name="stock_level" placeholder="Stock Level" min="0">
    </li>

    <li class="form-row">
      <input type="submit" value="Add Record">
    </li>
  </ul>

</form>
