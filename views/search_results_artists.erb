<% if @artists.count == 0 %>
<div>
  <h1 class="no_result">NO RESULTS FOUND</h1>
</div>
<% else %>
<% for artist in @artists %>
<% albums = artist.get_albums %>
<div class="search_container">
  <% albums.each do |album| %>
  <div class="search_cell">
    <img src= "<%= album.artwork %>"  width="200" height="200">
    <p>Artist:        <%= album.get_artist.name %> </p>
    <p>Title:         <%= album.title           %> </p>
    <p>Release Year:  <%= album.year            %> </p>
    <p>Genre:         <%= album.genre           %> </p>
    <p>Stock Level:   <%= album.stock_level     %> </p>
    <p>Store Price:   <%= album.store_price     %> </p>
  </div>
  <% end %>
</div>
<% end %>
<% end %>
